            </Grid.RowDefinitions>
            <TextBox x:Name="textBox" Margin="44,36,48,167" Grid.Row="1" Text="R" FlowDirection="RightToLeft" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" MaxLength="1" MaxLines="1" TextWrapping="Wrap" TextOptions.TextFormattingMode="Display" TextAlignment="Center" FontSize="98.667" FontFamily="R Gerstner" FontWeight="Bold" TextOptions.TextHintingMode="Fixed" Background="{x:Null}" RenderTransformOrigin="0.5,0.5" SelectionBrush="#FFB80404" Foreground="#FF801111" BorderThickness="0">
