                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Label x:Name="label7" Content="R Cable" HorizontalAlignment="Right" Margin="0,0,10,6" Grid.Row="3" VerticalAlignment="Bottom" Width="58" FontFamily="R Gerstner" FontWeight="Bold"/>
