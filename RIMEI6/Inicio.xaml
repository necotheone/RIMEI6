                </Button.Effect>
            </Button>
            <Button x:Name="ResetButton" Content="Reset" HorizontalAlignment="Left" Margin="108,276,0,0" Grid.Row="1" VerticalAlignment="Top" Width="82" FontFamily="Calibri" FontWeight="Bold" Height="39" Click="ResetButton_Click">
