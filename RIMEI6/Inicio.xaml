        <Rectangle Grid.ColumnSpan="2" Fill="Black" Height="2" Margin="0,26,0,0" Stroke="Black" VerticalAlignment="Top"/>
        <Grid Grid.Column="1" Margin="0,28,0,0">
            <Grid.RowDefinitions>
