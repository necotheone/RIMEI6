                        <GradientStop Color="#FFE0BABA" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="51"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="label4" Content="TOP Marcas" Margin="10" FontFamily="R Gerstner" FontWeight="Bold" FontSize="18"/>
                </Grid>
            </TabItem>
            <TabItem Header="Heavy Users" FontWeight="Bold">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FFE0BABA" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="51"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="label5" Content="Heavy Users" Margin="10" FontFamily="R Gerstner" FontWeight="Bold" FontSize="18"/>
                    <DataGrid x:Name="dataGrid1" Grid.Row="1">
                        <DataGrid.Effect>
                            <DropShadowEffect/>
                        </DataGrid.Effect>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Tabla IMEI" FontWeight="Bold">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FFE0BABA" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Margin="0,-2,0,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="51"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="label6" Content="Tabla IMEI" Margin="10" FontFamily="R Gerstner" FontWeight="Bold" FontSize="18"/>
                    <DataGrid x:Name="dataGrid" Grid.Row="1" Margin="0,2,0,0">
                        <DataGrid.Effect>
                            <DropShadowEffect/>
